<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.suidemocontracts.domain.product">
  
  <class name="org.dddml.suidemocontracts.domain.product.AbstractProductState$SimpleProductState" mutable="false" table="product">

    <cache usage="read-only"/>
	<id name="productId" length="20" column="product_id"><generator class="assigned"/></id>
	<property name="version" column="version" type="long" />

	<property name="id_" ><column name="id" unique-key="unique_product_sid" sql-type="VARCHAR(42)" /></property>
	<property name="name" ><column name="name" /></property>
	<property name="unitPrice" ><column name="unit_price" /></property>
	<property name="createdBy" ><column name="created_by" /></property>
	<property name="updatedBy" ><column name="updated_by" /></property>
	<property name="active" ><column name="active" /></property>

    <property name="createdAt" column="created_at" />

    <property name="updatedAt" column="updated_at" />

    <property name="commandId" column="command_id"/>


  </class>
  
</hibernate-mapping>

