<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.suidemocontracts.domain.daysummary">
  
  <class name="AbstractDaySummaryEvent" table="day_summary_event" mutable="false" abstract="true">

	<composite-id name="daySummaryEventId" class="org.dddml.suidemocontracts.domain.daysummary.DaySummaryEventId">
		<key-property name="dayMonthYearNumber" ><column name="day_month_year_number" /></key-property>
		<key-property name="dayMonthYearCalendar" ><column name="day_month_year_calendar" length="20" /></key-property>
		<key-property name="dayMonthNumber" ><column name="day_month_number" /></key-property>
		<key-property name="dayMonthIsLeap" ><column name="day_month_is_leap" /></key-property>
		<key-property name="dayNumber" ><column name="day_number" /></key-property>
		<key-property name="dayTimeZone" ><column name="day_time_zone" length="20" /></key-property>
		<key-property name="version" ><column name="version" /></key-property>
	</composite-id>

    <discriminator column="event_type" type="string" />


    <property name="createdBy" column="created_by"/>

    <property name="createdAt" column="created_at" />

    <property name="commandId" column="command_id"/>

        <subclass name="AbstractDaySummaryEvent$AbstractDaySummaryStateEvent" abstract="true">

	<property name="description" ><column name="description" /></property>
	<property name="metadata" ><column name="metadata" /></property>
	<property name="optionalData" ><column name="optional_data" /></property>
	<property name="active" ><column name="active" /></property>

      <set name="arrayData" table="day_summary_state_event_array_data" lazy="false">
        <key>

<column name="day_month_year_number" />
<column name="day_month_year_calendar" />
<column name="day_month_number" />
<column name="day_month_is_leap" />
<column name="day_number" />
<column name="day_time_zone" />
<column name="version" />
</key>
				
<element column="ArrayDataItem" type="string" not-null="true" />

      </set>

    <subclass name="AbstractDaySummaryEvent$SimpleDaySummaryStateCreated" discriminator-value="Created">
    	
    </subclass>

    <subclass name="AbstractDaySummaryEvent$SimpleDaySummaryStateMergePatched" discriminator-value="MergePatched">

        <property name="isPropertyDescriptionRemoved" column="is_property_description_removed"/>

        <property name="isPropertyMetadataRemoved" column="is_property_metadata_removed"/>

        <property name="isPropertyOptionalDataRemoved" column="is_property_optional_data_removed"/>

        <property name="isPropertyActiveRemoved" column="is_property_active_removed"/>


    </subclass>

    <subclass name="AbstractDaySummaryEvent$SimpleDaySummaryStateDeleted" discriminator-value="Deleted">

    </subclass>


        </subclass>

  </class>
  
</hibernate-mapping>
