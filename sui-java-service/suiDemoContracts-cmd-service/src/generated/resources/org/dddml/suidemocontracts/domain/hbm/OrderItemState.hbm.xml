<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.dddml.suidemocontracts.domain.order">
  
  <class name="org.dddml.suidemocontracts.domain.order.AbstractOrderItemState$SimpleOrderItemState" table="order_item">

	<composite-id name="orderItemId" class="org.dddml.suidemocontracts.domain.order.OrderItemId">
		<key-property name="orderId" ><column name="order_item_id_order_id" sql-type="VARCHAR(42)" /></key-property>
		<key-property name="productId" ><column name="order_item_id_product_id" length="50" /></key-property>
	</composite-id>
	<version name="version" column="version" type="long" />

	<property name="quantity" ><column name="quantity" /></property>
	<property name="itemAmount" ><column name="item_amount" /></property>
	<property name="createdBy" ><column name="created_by" /></property>
	<property name="updatedBy" ><column name="updated_by" /></property>
	<property name="active" ><column name="active" /></property>
	<property name="deleted" ><column name="deleted" /></property>

    <property name="createdAt" column="created_at" />

    <property name="updatedAt" column="updated_at" />


  </class>
  
</hibernate-mapping>

